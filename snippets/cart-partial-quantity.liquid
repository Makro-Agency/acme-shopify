<div class="row d-flex align-items-center">
	<div class="col-5 col-md-6">
	  <div class="cart__qty {% unless customer_b2B %}mb-4{% endunless %}" >
		{% render "product-form__qty" product:item index:forloop.index customer_b2B:customer_b2B %}
	  </div>
	</div>
	<div class="col-2 col-md-6 {% unless customer_b2B %}mt-lg-3{% endunless %}">
		<a href="/cart/change?line={{ forloop.index }}&amp;quantity=0" 
		  class="text-link text-link--accent {% unless customer_b2B %}cart__remove{% endunless %} " 
		  aria-label="{{ 'cart.buttons.remove' | t: product: item.title }}" 
		  {% unless customer_b2B %}data-cart-remove{% endunless %}
		  {% if customer_b2B %}onclick="removeProduct(event,this)"{% endif %}
		>
		  {% render 'animation-close' %}
		</a>
	</div>
  </div>
