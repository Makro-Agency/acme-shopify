
<section class="container page-section-page-title basic-page ">
    <div class="row">
      <div class="col-12 mt-5 mb-4 mb-lg-5 col-lg-8 offset-lg-2">
        <h1 class="header-1">{{ blog.title }}</h1>
      </div>
    </div>
    <div class="row">
      <div class="content col-lg-8 offset-lg-2" id="glossary-items">
        {% for article in blog.articles %}
            <div class="glossary-item mt-4" id="{{ article.handle | replace : 'glossary/' : ''}}">
                <h2 class="mb-3">{{ article.title }}</h2>
                <div class="rte">
                  {{ article.content }}
                </div>
                {% if article.image %}
                    <img src="{{article.image | img_url: "1000x" }}" 
                      class = 'img-fluid mt-3 mb-3' width="{{ article.image.width}}" height="{{article.image.height}}" alt="{{ article.title}}" loading="lazy">
                {% endif %}
            </div>
        {% endfor %}
      </div>
    </div>
  </section>
  